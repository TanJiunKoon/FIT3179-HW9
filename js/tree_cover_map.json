{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Unemployment Rate in Malaysia (1982-2022)",
  "width": 1000,
  "height": 600,
  "projection": { "type": "equirectangular" },
  "config": {
    "background": "transparent",
    "axis": {
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "view": { "stroke": null }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-HW9/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue",
        "stroke": "lightblue",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-HW9/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#eaeaea"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-HW9/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#f0f0f0",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-HW9/main/data/malaysia_states.json",
        "format": { "type": "topojson", "feature": "gadm41_MYS_1" }
      },
      "transform": [
        {
          "calculate": "datum.properties.NAME_1 == 'Penang' ? 'Pulau Pinang' : datum.properties.NAME_1 == 'Kuala Lumpur' ? 'W.P. Kuala Lumpur' : datum.properties.NAME_1 == 'Labuan' ? 'W.P. Labuan' : datum.properties.NAME_1 == 'Putrajaya' ? 'W.P. Putrajaya' : datum.properties.NAME_1",
          "as": "state_name"
        },
        {
          "lookup": "state_name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-HW9/main/data/Cleaned_Unemployment_Rate_Data.csv",
              "format": { "type": "csv" }
            },
            "key": "state",
            "fields": ["date", "u_rate"]
          }
        },
        {
          "filter": "year(datum.date) == selectedYear"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)",
          "scale": {
            "scheme": "blues",
            "domain": [1, 10],
            "reverse": false
          }
        },
        "tooltip": [
          { "field": "state_name", "type": "nominal", "title": "State" },
          {
            "field": "u_rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}

